@{
    ViewBag.Title = "Choix Type Vehicule";
}

<h2>Choisissez quelle type de véhicule vous souhaitez ajouter.</h2>

<div style="text-align:center;">
    <button class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded" onclick="location.href='@Url.Action("AjoutVehicule", "Vehicule", new { typeVehicule = "VOITURE" })'">
        Voiture
    </button>

    <button class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded" onclick="location.href='@Url.Action("AjoutVehicule", "Vehicule", new { typeVehicule = "MOTO" })'">
        Moto
    </button>
</div>
